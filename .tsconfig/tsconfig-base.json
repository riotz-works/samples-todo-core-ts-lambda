{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "../target/dist",
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "newLine": "LF",
        "forceConsistentCasingInFileNames": true
    },
    "include": [ "../src/**/*.ts" ]
}
